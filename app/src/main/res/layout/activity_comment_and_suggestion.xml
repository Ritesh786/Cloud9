<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
   android:background="#000000"
    tools:context="com.riteshavikal.lue.cloud9.CommentAndSuggestion">


    <TextView
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:text="COMMENTS AND SUGGESTIONS"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="#ffffff"
        android:layout_margin="20dp"
        android:layout_height="wrap_content">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="#000000"
            android:layout_margin="10dp"
            android:background="#ffffff"
            android:hint="Name"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_centerVertical="true"
            android:background="#000000"
            />


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="#000000"
            android:layout_margin="10dp"
            android:inputType="number"
            android:background="#ffffff"
            android:hint="Email"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_below="@+id/pleasetxt"
        android:background="#ffffff"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        >
        <EditText
            android:layout_width="match_parent"
            android:hint="Comments &amp; Suggestion "
            android:textColorHint="#000000"
            android:maxLength="10000"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:layout_marginTop="10dp"
        android:textSize="15dp"
        android:gravity="center"
        android:text="Tap to record comment and suggestion"/>

<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/btn"
    android:layout_gravity="center"
    android:layout_marginTop="10dp"
    android:drawableTop="@drawable/recordcom"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:textColor="#bc9842"
            android:layout_marginTop="20dp"
            android:textSize="20dp"
            android:text="Rate Us"/>

        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/StarRatingBar"
            android:numStars="5"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="80dp"
            android:stepSize="1.0"
             />
    </LinearLayout>


    <Button
        android:id="@+id/submit_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn1"
        android:textColor="#ffff"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="24dp"
        android:padding="12dp"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/forgotxt"
        android:layout_marginLeft="15dp"
        android:text="Submit"/>

</LinearLayout>
